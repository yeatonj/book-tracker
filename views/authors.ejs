<!-- views/authors.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <h2>Authors:</h2>
  <ul>
    <% for (let i = 0; i < authors.length; i++) { %>
      <li>
        <a href="/authors/<%= authors[i].id %>"><%= authors[i].name %></a>
      </li>
    <% } %>
  </ul>
  <a href="/">Home</a>
</body>
</html>

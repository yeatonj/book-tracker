<!-- views/authors.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <h2>Authors:</h2>
  <ul>
    <% for (let i = 0; i < authors.length; i++) { %>
      <li>
        <a href="/authors/<%= authors[i].id %>"><%= authors[i].name %></a>
      </li>
    <% } %>
  </ul>
  <form action="/authors" method="post">
    <label for="newAuthor">Add Author: </label>
    <input type="text" name="newAuthor" id="newAuthor">
    <button type="submit">Add Author</button>
  </form>
  <a href="/">Home</a>
</body>
</html>
